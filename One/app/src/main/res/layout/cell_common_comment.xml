<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userAvatarView"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_18" />

        <TextView
            android:id="@+id/userNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userAvatarView"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@id/userAvatarView"
            android:textColor="@color/MLBColor4A90E2"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameLabel"
            android:layout_alignLeft="@id/userNameLabel"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/MLBColorB8B8B8"
            android:textSize="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center">

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/selector_comment_like_icon" />

            <TextView
                android:id="@+id/praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_1"
                android:textColor="@color/MLBColor626262"
                android:textSize="@dimen/dp_12"
                tools:text="23" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/replyContentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_comment_content"
        android:lineSpacingExtra="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_13"
        android:paddingTop="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_3"
        android:textColor="@color/MLBColor626262"
        android:textSize="@dimen/dp_13"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_17"
        android:lineSpacingExtra="@dimen/dp_8"
        android:textColor="@color/MLBColor0E0E0E"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:id="@+id/unFold"
        android:layout_width="@dimen/dp_32"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_17"
        android:text="展开"
        android:textColor="@color/MLBColor8FBFF9"
        android:textSize="@dimen/dp_16" />

    <!--<View-->
    <!--android:background="@color/MLBSeparatorColor"-->
    <!--android:layout_marginTop="@dimen/dp_10"-->
    <!--android:layout_height="@dimen/dp_2"-->
    <!--android:layout_width="match_parent"/>-->

</LinearLayout>